<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_pv_technology"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_bg"
    tools:context="com.logischtech.pv_rooftop.PV_technology"
    android:orientation="vertical">


    <android.support.v4.widget.DrawerLayout
        android:layout_width="match_parent"
        android:id="@+id/dr"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:text="FAQS for Solar"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textStyle="bold"
                android:id="@+id/faqs_for"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_height="wrap_content" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="50dp"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:gravity="center"
                android:background="@drawable/corner_white"
                android:hint="Search what you are looking for .."
                android:layout_marginLeft="13dp"
                android:layout_marginRight="60dp"
                android:paddingLeft="-35dp"
                android:id="@+id/ev_search"
                android:layout_marginTop="20dp"
                android:paddingBottom="13dp"
                android:textSize="14dp"
                android:paddingTop="11dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="45dp"
                android:paddingTop="3dp"
                android:src="@drawable/search"
                android:paddingBottom="2dp"
                android:background="@drawable/corner_blue"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="-58dp"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:orientation ="vertical"
            android:layout_marginTop="130dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:orientation="horizontal"
                    android:id="@+id/tab1"

                    android:layout_marginTop="20dp"
                    android:background="#006B9C"
                    android:layout_height="55dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:src="@drawable/icon1"
                        android:paddingLeft="10dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="match_parent"
                        android:text="PV CELLS"
                        android:textColor="#ffffff"

                        android:textSize="14dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:id="@+id/welcome_p1"
                        android:layout_marginRight="60dp"
                        android:layout_height="55dp" />

                    <View
                        android:layout_width="1dp"
                        android:background="#F9FAFB"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="-40dp"
                        android:layout_height="30dp"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:src="@drawable/right_arrow"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content" />





                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:orientation="horizontal"
                    android:id="@+id/tab2"

                    android:layout_marginTop="10dp"
                    android:background="#F78F1E"
                    android:layout_height="55dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:src="@drawable/icon2"
                        android:paddingLeft="10dp"

                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="match_parent"
                        android:text="INVERTERS"
                        android:textColor="#ffffff"
                        android:textSize="14dp"
                        android:id="@+id/welcome_p2"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:layout_marginRight="60dp"
                        android:layout_height="55dp" />

                    <View
                        android:layout_width="1dp"
                        android:background="#F9FAFB"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="-40dp"
                        android:layout_height="30dp"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:src="@drawable/right_arrow"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content" />





                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:background="#4AC51F"
                    android:layout_height="55dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:src="@drawable/icon3"
                        android:paddingLeft="10dp"

                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="match_parent"
                        android:text="BATTERIES"
                        android:textColor="#ffffff"
                        android:textSize="14dp"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/welcome_p3"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:layout_marginRight="60dp"
                        android:layout_height="55dp" />

                    <View
                        android:layout_width="1dp"
                        android:background="#F9FAFB"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="-40dp"
                        android:layout_height="30dp"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:src="@drawable/right_arrow"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content" />




                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:background="#EBBD05"
                    android:layout_height="55dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:src="@drawable/icon4"
                        android:paddingLeft="10dp"
                        android:paddingTop="4dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="match_parent"
                        android:text="MOUNTING STRUCTURES"
                        android:textColor="#ffffff"
                        android:textSize="14dp"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:paddingTop="-2dp"
                        android:gravity="center_vertical"
                        android:id="@+id/welcome_p4"
                        android:layout_marginRight="60dp"
                        android:layout_height="55dp" />

                    <View
                        android:layout_width="1dp"
                        android:background="#F9FAFB"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="-40dp"
                        android:layout_height="30dp"/>


                    <ImageView
                        android:layout_width="match_parent"
                        android:src="@drawable/right_arrow"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content" />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:orientation="horizontal"
                    android:id="@+id/tab5"

                    android:layout_marginTop="10dp"
                    android:background="#006B9C"
                    android:layout_height="55dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:src="@drawable/icon1"
                        android:paddingLeft="10dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="match_parent"
                        android:text="ROOF"
                        android:textColor="#ffffff"

                        android:textSize="14dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:id="@+id/welcome_p5"
                        android:layout_marginRight="60dp"
                        android:layout_height="55dp" />

                    <View
                        android:layout_width="1dp"
                        android:background="#F9FAFB"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="-40dp"
                        android:layout_height="30dp"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:src="@drawable/right_arrow"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content" />





                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:orientation="horizontal"
                    android:id="@+id/tab6"

                    android:layout_marginTop="10dp"
                    android:background="#F78F1E"
                    android:layout_height="55dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:src="@drawable/icon2"
                        android:paddingLeft="10dp"

                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="match_parent"
                        android:text="CONNECTION TO GRID"
                        android:textColor="#ffffff"
                        android:textSize="14dp"
                        android:id="@+id/welcome_p6"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:layout_marginRight="60dp"
                        android:layout_height="55dp" />

                    <View
                        android:layout_width="1dp"
                        android:background="#F9FAFB"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="-40dp"
                        android:layout_height="30dp"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:src="@drawable/right_arrow"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content" />





                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:orientation="horizontal"
                    android:id="@+id/faq"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:background="#F2F3F4"
                    android:layout_height="55dp">

                    <ImageView
                        android:layout_width="45dp"
                        android:src="@drawable/faq_img"
                        android:layout_gravity="center"
                        android:paddingLeft="10dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="match_parent"
                        android:text="Frequently Asked Questions"
                        android:textColor="#4094BC"
                        android:textSize="14dp"
                        android:layout_marginLeft="7dp"
                        android:id="@+id/faq1"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:paddingBottom="3dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="55dp" />

                </LinearLayout>


            </LinearLayout>





        </ScrollView>

        <android.support.design.widget.NavigationView
            android:layout_width="wrap_content"
            app:menu="@menu/navigation"
            android:fitsSystemWindows="true"
            android:id="@+id/nav_drawer"
            android:background="#79B819"
            app:itemIconTint="#fff"
            app:itemTextColor="#ffffff"
            app:theme="@style/NavigationDrawerStyle"
            android:layout_gravity="start"
            android:layout_height="match_parent">


        </android.support.design.widget.NavigationView>

    </android.support.v4.widget.DrawerLayout>

</LinearLayout>
