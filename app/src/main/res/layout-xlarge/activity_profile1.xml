<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:background="@drawable/profile_bg"
    android:orientation="vertical"
    android:fitsSystemWindows="false"
    android:weightSum="4"
    android:layout_height="match_parent"
    tools:context="com.logischtech.pv_rooftop.Profile_1"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="170dp"
            android:text="Please clarify your profile to "
            android:gravity="center_horizontal"
            android:textSize="35dp"
            android:id="@+id/l1"
            android:textStyle="bold"
            android:textColor="#3E4040"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:text="help us personalize information  "
            android:gravity="center_horizontal"
            android:textSize="35dp"
            android:id="@+id/l2"
            android:textStyle="bold"
            android:textColor="#3E4040"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:text=" for you  "
            android:gravity="center_horizontal"
            android:textSize="35dp"
            android:textStyle="bold"
            android:id="@+id/l3"
            android:textColor="#3E4040"
            android:layout_height="wrap_content" />




    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_weight="3"
    android:orientation="vertical"
    android:layout_marginBottom="120dp"
    android:layout_height="wrap_content">
    
    <TextView
        android:layout_width="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="#0072A7"
        android:textColor="#fff"
        android:id="@+id/q1"

        android:textSize="38dp"
        android:layout_marginTop="120dp"

        android:textStyle="bold"
        android:paddingLeft="40dp"
        android:paddingTop="20dp"
        android:text="Depict your roof area"
        android:layout_height="100dp" />
    <ImageView
        android:layout_width="60dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="-10dp"
        android:src="@drawable/arrow"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="50dp"
        android:layout_height="80dp">


        <TextView
            android:layout_width="400dp"
            android:paddingLeft="110dp"
            android:text="Small house"
            android:id="@+id/a1"
            android:paddingTop="20dp"
            android:textSize="30dp"
            android:textColor="#0072A7"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="7dp"
            android:layout_marginLeft="293dp"
            android:background="#EB881D"
            android:layout_height="100dp"/>




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:layout_height="80dp">

        <TextView
            android:layout_width="400dp"
            android:paddingLeft="110dp"
            android:text="Bigger house"
            android:paddingTop="20dp"
            android:id="@+id/a2"
            android:textSize="30dp"
            android:textColor="#0072A7"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="7dp"
            android:layout_marginLeft="293dp"
            android:background="#EB881D"
            android:layout_height="100dp"/>




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:layout_height="80dp">

        <TextView
            android:layout_width="400dp"
            android:paddingLeft="110dp"
            android:text="Bigmultistory house"
            android:paddingTop="20dp"
            android:id="@+id/a3"
            android:textSize="30dp"
            android:textColor="#0072A7"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="7dp"
            android:layout_marginLeft="293dp"
            android:background="#EB881D"
            android:layout_height="100dp"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:layout_height="80dp">

        <TextView
            android:layout_width="400dp"
            android:paddingLeft="110dp"
            android:text="Large industry roof"
            android:paddingTop="20dp"
            android:textSize="30dp"
            android:id="@+id/a4"
            android:textColor="#0072A7"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="7dp"
            android:layout_marginLeft="293dp"
            android:background="#EB881D"
            android:layout_height="100dp"/>




    </LinearLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:id="@+id/questions"
        android:gravity="left"
        android:layout_marginTop="-400dp"
        android:theme="@style/MyRadioButtonStyle"
        android:layout_gravity="left"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:checked="false"
            android:gravity="left"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="40dp"
            android:buttonTint="#DADADA"
            android:layout_gravity="left"
            android:id="@+id/radio1"

            />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:gravity="left"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:buttonTint="#DADADA"
            android:layout_gravity="left"
            android:id="@+id/radio2"
            />
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:layout_marginRight="30dp"
            android:gravity="left"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="70dp"
            android:buttonTint="#DADADA"
            android:layout_gravity="left"
            android:id="@+id/radio3"

            />
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:gravity="left"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="70dp"
            android:buttonTint="#DADADA"
            android:layout_gravity="left"
            android:id="@+id/radio4"

            />





</RadioGroup>
</LinearLayout>


    <Button
        android:layout_width="150dp"
        android:textSize="30dp"
        android:layout_gravity="end"
        android:id="@+id/next"
        android:padding="15dp"
        android:textColor="#fff"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="#0072A7"
        android:text="Next"
        android:layout_height="wrap_content" />









</LinearLayout>
