<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:layout_height="wrap_content"
    tools:context="com.logischtech.pv_rooftop.Profile_1"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@drawable/top_banner_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:text="Please clarify your profile to "
            android:gravity="center"
            android:textSize="18dp"
            android:id="@+id/l1"
            android:layout_marginTop="60dp"
            android:textStyle="bold"
            android:textColor="#3E4040"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:text="help us personalize information  "
            android:gravity="center_horizontal"
            android:id="@+id/l2"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#3E4040"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:text=" for you  "
            android:gravity="center_horizontal"
            android:textSize="18dp"
            android:id="@+id/l3"
            android:textStyle="bold"
            android:textColor="#3E4040"
            android:layout_height="wrap_content" />





    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/profile_gradiant_bg"

        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="0dp"
            android:layout_weight="3"

            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:background="#0072A7"
                android:textColor="#fff"
                android:textSize="16dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:paddingLeft="20dp"
                android:text="Depict your roof area"
                android:layout_height="55dp"
                android:id="@+id/q1" />

            <ImageView
                android:layout_width="30dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="-10dp"
                android:src="@drawable/traingle_blue"
                android:layout_height="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:background="#fff"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="13dp"
                android:layout_height="50dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:paddingLeft="45dp"
                        android:text="Small house"
                        android:gravity="center_vertical"
                        android:id="@+id/a1"
                        android:textSize="15dp"
                        android:paddingTop="-5dp"
                        android:textColor="#0072A7"
                        android:layout_height="52dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="-4dp"

                    android:layout_height="wrap_content">


                    <View
                        android:layout_width="5dp"
                        android:background="#EB881D"
                        android:layout_height="50dp"/>

                </LinearLayout>





            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:background="#fff"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="13dp"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:paddingLeft="45dp"
                        android:text="Bigger house"
                        android:layout_marginRight="20dp"
                        android:paddingTop="-5dp"
                        android:textSize="15dp"
                        android:gravity="center_vertical"
                        android:id="@+id/a2"
                        android:textColor="#0072A7"
                        android:layout_height="52dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="-4dp"

                    android:layout_height="wrap_content">


                    <View
                        android:layout_width="5dp"
                        android:background="#EB881D"
                        android:layout_height="50dp"/>

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:background="#fff"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="13dp"
                android:layout_height="50dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:paddingLeft="45dp"
                        android:text="Big multistory house"
                        android:paddingTop="-5dp"
                        android:id="@+id/a3"
                        android:gravity="center_vertical"
                        android:textSize="15dp"
                        android:layout_marginRight="20dp"
                        android:textColor="#0072A7"
                        android:layout_height="52dp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="-4dp"

                    android:layout_height="wrap_content">


                    <View
                        android:layout_width="5dp"
                        android:background="#EB881D"
                        android:layout_height="50dp"/>

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:background="#fff"
                android:layout_marginLeft="13dp"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:layout_marginRight="13dp"
                android:layout_height="50dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:paddingLeft="45dp"
                        android:text="Large industry roof"
                        android:paddingTop="-12dp"
                        android:id="@+id/a4"
                        android:paddingBottom="3dp"
                        android:gravity="center_vertical"
                        android:textSize="15dp"
                        android:layout_marginRight="20dp"
                        android:textColor="#0072A7"
                        android:layout_height="55dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="-4dp"

                    android:layout_height="wrap_content">


                    <View
                        android:layout_width="5dp"
                        android:background="#EB881D"
                        android:layout_height="50dp"/>

                </LinearLayout>



            </LinearLayout>

            <RadioGroup
                android:layout_width="match_parent"
                android:id="@+id/questions"
                android:gravity="left"
                android:layout_marginTop="-220dp"
                android:layout_gravity="left"
                android:theme="@style/MyRadioButtonStyle"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:gravity="left"
                    android:layout_marginLeft="-10dp"
                    android:scaleY="0.8"
                    android:layout_marginRight="30dp"
                    android:scaleX="0.8"
                    android:layout_marginTop="11dp"
                    android:layout_gravity="left"
                    android:id="@+id/radio1"

                    />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:scaleY="0.8"
                    android:scaleX="0.8"
                    android:layout_marginRight="30dp"
                    android:gravity="left"
                    android:layout_marginLeft="-10dp"
                    android:layout_marginTop="26dp"
                    android:layout_gravity="left"
                    android:id="@+id/radio2"
                    />
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:gravity="left"
                    android:scaleY="0.8"
                    android:layout_marginRight="30dp"

                    android:scaleX="0.8"
                    android:layout_marginLeft="-10dp"
                    android:layout_marginTop="24dp"
                    android:layout_gravity="left"
                    android:id="@+id/radio3"

                    />
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:scaleY="0.8"
                    android:scaleX="0.8"
                    android:layout_marginRight="30dp"
                    android:gravity="left"
                    android:layout_marginLeft="-10dp"
                    android:layout_marginTop="23dp"
                    android:layout_gravity="left"
                    android:id="@+id/radio4"

                    />



            </RadioGroup>








        </LinearLayout>

        <Button
            android:layout_width="80dp"
            android:textSize="16dp"
            android:layout_gravity="end"
            android:id="@+id/next"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="0dp"
            android:textColor="#fff"
            android:layout_marginRight="13dp"
            android:layout_marginBottom="10dp"
            android:background="#0072A7"
            android:text="Next"
            android:layout_height="wrap_content" />


    </LinearLayout>

</LinearLayout>
