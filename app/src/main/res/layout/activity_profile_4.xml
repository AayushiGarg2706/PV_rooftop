<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile_4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_gradiant_bg"
    tools:context="com.logischtech.pv_rooftop.Profile_4"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@drawable/top_banner_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:text="Please clarify your profile to "
            android:gravity="center"
            android:textSize="18dp"
            android:id="@+id/l1"
            android:layout_marginTop="60dp"
            android:textStyle="bold"
            android:textColor="#3E4040"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:text="help us personalize information  "
            android:gravity="center_horizontal"
            android:id="@+id/l2"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#3E4040"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:text=" for you  "
            android:gravity="center_horizontal"
            android:textSize="18dp"
            android:id="@+id/l3"
            android:textStyle="bold"
            android:textColor="#3E4040"
            android:layout_height="wrap_content" />





    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="3"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="0dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:background="#0072A7"
            android:textColor="#fff"
            android:textSize="16dp"
            android:layout_marginTop="20dp"
            android:paddingBottom="5dp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="5dp"
            android:text="What kind of information do you want to get ?"
            android:layout_height="60dp"
            android:id="@+id/p4q1" />

        <ImageView
            android:layout_width="30dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="-10dp"
            android:src="@drawable/traingle_blue"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:background="#fff"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="13dp"
            android:layout_marginRight="13dp"
            android:layout_height="52dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="300dp"
                    android:paddingLeft="45dp"
                    android:text="Videos"
                    android:id="@+id/p4a1"
                    android:gravity="center_vertical"
                    android:textSize="15dp"
                    android:textColor="#0072A7"
                    android:layout_height="52dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="-4dp"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="5dp"
                    android:background="#EB881D"
                    android:layout_height="100dp"/>

            </LinearLayout>








        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#fff"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="13dp"
            android:layout_height="52dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="300dp"
                    android:paddingLeft="45dp"
                    android:text="Text"
                    android:gravity="center_vertical"
                    android:textSize="15dp"
                    android:id="@+id/p4a2"
                    android:textColor="#0072A7"
                    android:layout_height="52dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="-4dp"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="5dp"
                    android:background="#EB881D"
                    android:layout_height="100dp"/>

            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#fff"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="13dp"
            android:layout_height="52dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="300dp"
                    android:paddingLeft="45dp"
                    android:text="Etc"
                    android:gravity="center_vertical"
                    android:textSize="15dp"
                    android:id="@+id/p4a3"
                    android:textColor="#0072A7"
                    android:layout_height="52dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="-4dp"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="5dp"
                    android:background="#EB881D"
                    android:layout_height="100dp"/>

            </LinearLayout>



        </LinearLayout>

        <RadioGroup
            android:layout_width="match_parent"
            android:id="@+id/questions"
            android:gravity="left"
            android:layout_marginTop="-220dp"
            android:layout_gravity="left"
            android:theme="@style/MyRadioButtonStyle"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:scaleY="0.8"
                android:clickable="true"
                android:scaleX="0.8"
                android:gravity="left"
                android:layout_marginLeft="-10dp"
                android:layout_marginTop="55dp"
                android:layout_gravity="left"
                android:id="@+id/radio2"
                />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:gravity="left"
                android:scaleY="0.8"
                android:scaleX="0.8"
                android:layout_marginLeft="-10dp"
                android:layout_marginTop="29dp"
                android:layout_gravity="left"
                android:id="@+id/radio3"

                />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:scaleY="0.8"
                android:scaleX="0.8"
                android:gravity="left"
                android:layout_marginLeft="-10dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="left"
                android:id="@+id/radio4"

                />





        </RadioGroup>

    </LinearLayout>

    <Button
        android:layout_width="80dp"
        android:textSize="18dp"
        android:layout_gravity="end"
        android:id="@+id/next4"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#fff"
        android:layout_marginRight="13dp"
        android:layout_marginBottom="10dp"
        android:background="#0072A7"
        android:text="Next"
        android:layout_height="wrap_content" />


</LinearLayout>
