<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_welcome"
    android:background="@drawable/profile_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.logischtech.pv_rooftop.Welcome"
    android:orientation="vertical">

    <android.support.v4.widget.DrawerLayout
        android:layout_width="match_parent"
        android:id="@+id/dr"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/main"
            android:layout_height="wrap_content">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="30dp"
                    android:src="@drawable/menu"
                    android:id="@+id/mb"
                    android:visibility="gone"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <ScrollView
                android:layout_width="match_parent"
                android:orientation ="vertical"
                android:layout_marginTop="25dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="match_parent"
                                android:text="FAQs for Solar"
                                android:layout_marginTop="0dp"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:id="@+id/faqs_for"
                                android:textColor="#000000"
                                android:textSize="20dp"
                                android:layout_height="wrap_content" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_height="wrap_content">

                            <EditText
                                android:layout_width="match_parent"
                                android:gravity="left"
                                android:background="@drawable/corner_white"
                                android:hint="Search what you are looking for?"
                                android:layout_marginLeft="13dp"
                                android:layout_marginRight="55dp"
                                android:paddingLeft="15dp"
                                android:id="@+id/ev_search"
                                android:layout_marginTop="20dp"
                                android:imeOptions="actionSearch"
                                android:inputType="text"
                                android:paddingBottom="11dp"
                                android:textSize="14dp"
                                android:paddingTop="11dp"
                                android:layout_height="wrap_content" />

                            <ImageView
                                android:layout_width="45dp"
                                android:paddingTop="3dp"
                                android:src="@drawable/search"
                                android:id="@+id/search"
                                android:paddingBottom="0dp"
                                android:background="@drawable/corner_blue"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                android:layout_marginRight="30dp"
                                android:layout_marginLeft="-58dp"
                                android:layout_marginTop="20dp"
                                android:layout_height="wrap_content" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginLeft="13dp"
                            android:layout_marginRight="13dp"
                            android:orientation="horizontal"
                            android:id="@+id/tab1"

                            android:layout_marginTop="20dp"
                            android:background="#006B9C"
                            android:layout_height="55dp">

                            <ImageView
                                android:layout_width="50dp"
                                android:src="@drawable/icon1"
                                android:paddingLeft="10dp"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_width="match_parent"
                                android:text="ABOUT PV TECHNOLOGIES"
                                android:textColor="#ffffff"

                                android:textSize="14dp"
                                android:layout_marginLeft="10dp"
                                android:gravity="center_vertical"
                                android:textStyle="bold"
                                android:id="@+id/welcome_p1"
                                android:layout_marginRight="60dp"
                                android:layout_height="55dp" />

                            <View
                                android:layout_width="1dp"
                                android:background="#F9FAFB"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="-40dp"
                                android:layout_height="35dp"/>

                            <ImageView
                                android:layout_width="match_parent"
                                android:src="@drawable/right_arrow"
                                android:layout_marginRight="5dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:layout_height="55dp" />





                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginLeft="13dp"
                            android:layout_marginRight="13dp"
                            android:orientation="horizontal"
                            android:id="@+id/tab2"

                            android:layout_marginTop="10dp"
                            android:background="#F78F1E"
                            android:layout_height="55dp">

                            <ImageView
                                android:layout_width="50dp"
                                android:src="@drawable/icon2"
                                android:paddingLeft="10dp"

                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_width="match_parent"
                                android:text="BENEFITS"
                                android:textColor="#ffffff"
                                android:textSize="14dp"
                                android:id="@+id/welcome_p2"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:textStyle="bold"
                                android:layout_marginRight="60dp"
                                android:layout_height="55dp" />

                            <View
                                android:layout_width="1dp"
                                android:background="#F9FAFB"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="-40dp"
                                android:layout_height="35dp"/>
                            <ImageView
                                android:layout_width="match_parent"
                                android:src="@drawable/right_arrow"
                                android:layout_marginRight="5dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:layout_height="55dp" />





                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginLeft="13dp"
                            android:layout_marginRight="13dp"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:background="#4AC51F"
                            android:layout_height="55dp">

                            <ImageView
                                android:layout_width="50dp"
                                android:src="@drawable/icon3"
                                android:paddingLeft="10dp"

                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_width="match_parent"
                                android:text="ASK COMMUNITY"
                                android:textColor="#ffffff"
                                android:textSize="14dp"
                                android:layout_marginLeft="10dp"
                                android:id="@+id/welcome_p3"
                                android:gravity="center_vertical"
                                android:textStyle="bold"
                                android:layout_marginRight="60dp"
                                android:layout_height="55dp" />

                            <View
                                android:layout_width="1dp"
                                android:background="#F9FAFB"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="-40dp"
                                android:layout_height="35dp"/>

                            <ImageView
                                android:layout_width="match_parent"
                                android:src="@drawable/right_arrow"
                                android:layout_marginRight="5dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:layout_height="55dp" />




                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginLeft="13dp"
                            android:layout_marginRight="13dp"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:background="#EBBD05"
                            android:layout_height="55dp">

                            <ImageView
                                android:layout_width="50dp"
                                android:src="@drawable/icon4"
                                android:paddingLeft="10dp"
                                android:paddingTop="4dp"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_width="match_parent"
                                android:text="INSTALL PV SYSTEM ON YOUR ROOF"
                                android:textColor="#ffffff"
                                android:textSize="14dp"
                                android:layout_marginLeft="10dp"
                                android:textStyle="bold"
                                android:paddingTop="-2dp"
                                android:gravity="center_vertical"
                                android:id="@+id/welcome_p4"
                                android:layout_marginRight="60dp"
                                android:layout_height="55dp" />

                            <View
                                android:layout_width="1dp"
                                android:background="#F9FAFB"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="-40dp"
                                android:layout_height="35dp"/>


                            <ImageView
                                android:layout_width="match_parent"
                                android:src="@drawable/right_arrow"
                                android:layout_marginRight="5dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:layout_height="55dp" />



                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginLeft="13dp"
                            android:layout_marginRight="13dp"
                            android:orientation="horizontal"
                            android:id="@+id/faq"
                            android:layout_marginTop="20dp"
                            android:background="#F2F3F4"
                            android:layout_height="55dp">

                            <ImageView
                                android:layout_width="45dp"
                                android:src="@drawable/faq_img"
                                android:layout_gravity="center"
                                android:paddingLeft="10dp"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_width="match_parent"
                                android:text="Frequently Asked Questions"
                                android:textColor="#4094BC"
                                android:textSize="14dp"
                                android:layout_marginLeft="7dp"
                                android:id="@+id/faq1"
                                android:gravity="center_vertical"
                                android:textStyle="bold"
                                android:paddingBottom="3dp"
                                android:layout_marginRight="10dp"
                                android:layout_height="55dp" />

                        </LinearLayout>


                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_marginLeft="13dp"
                            android:layout_marginRight="13dp"
                            android:orientation="vertical"
                            android:layout_marginTop="10dp"
                            android:id="@+id/scroll_lower"
                            android:layout_marginBottom="20dp"
                            android:background="#ffffff"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_marginTop="14dp"
                                        android:textSize="14dp"
                                        android:id="@+id/faq_1"
                                        android:paddingLeft="7dp"
                                        android:layout_marginRight="40dp"
                                        android:layout_marginLeft="10dp"
                                        android:text="1. What is Solar Roof Top Sysytem? "
                                        android:textColor="#696968"
                                        android:layout_height="wrap_content" />

                                    <ImageView
                                        android:layout_width="25dp"
                                        android:src="@drawable/icon6"
                                        android:layout_gravity="end"
                                        android:layout_marginTop="-20dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_height="wrap_content" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_marginTop="-24dp"
                                        android:textSize="12dp"
                                        android:paddingLeft="7dp"
                                        android:layout_marginRight="40dp"
                                        android:layout_marginLeft="12dp"
                                        android:id="@+id/faq_a1"
                                        android:text="In a solar roof top sysytem,the solar panels are installed in the roof of any ...."
                                        android:textColor="#878786"
                                        android:layout_height="wrap_content" />

                                    <View
                                        android:layout_width="match_parent"
                                        android:background="#A9A9A9"
                                        android:layout_marginLeft="13dp"
                                        android:layout_marginTop="13dp"
                                        android:layout_marginRight="13dp"
                                        android:layout_height="0.5dp"/>


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"

                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_marginTop="10dp"
                                        android:textSize="14dp"
                                        android:paddingLeft="10dp"
                                        android:layout_marginRight="40dp"
                                        android:id="@+id/faq_2"
                                        android:layout_marginLeft="10dp"
                                        android:text="2. What is Grid Connected Solar Rooftop System? "
                                        android:textColor="#696968"
                                        android:layout_height="wrap_content" />
                                    <ImageView
                                        android:layout_width="25dp"
                                        android:src="@drawable/icon6"
                                        android:layout_gravity="end"
                                        android:layout_marginTop="-20dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_height="wrap_content" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_marginTop="-24dp"
                                        android:textSize="12dp"
                                        android:paddingLeft="10dp"
                                        android:layout_marginRight="40dp"
                                        android:layout_marginLeft="12dp"
                                        android:id="@+id/faq_a2"
                                        android:text="In a solar roof top sysytem,the solar panels are installed in   the roof of any ...."
                                        android:textColor="#878786"
                                        android:layout_height="wrap_content" />

                                    <View
                                        android:layout_width="match_parent"
                                        android:background="#A9A9A9"
                                        android:layout_marginLeft="13dp"
                                        android:layout_marginTop="13dp"
                                        android:layout_marginRight="13dp"
                                        android:layout_height="0.5dp"/>


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"

                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_marginTop="10dp"
                                        android:textSize="14dp"
                                        android:paddingLeft="10dp"
                                        android:layout_marginRight="40dp"
                                        android:id="@+id/faq_3"
                                        android:layout_marginLeft="10dp"
                                        android:text="3. Where can such plants be installed? "
                                        android:textColor="#696968"
                                        android:layout_height="wrap_content" />
                                    <ImageView
                                        android:layout_width="25dp"
                                        android:src="@drawable/icon6"
                                        android:layout_gravity="end"
                                        android:layout_marginTop="-20dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_height="wrap_content" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_marginTop="-24dp"
                                        android:textSize="12dp"
                                        android:layout_marginRight="40dp"
                                        android:id="@+id/faq_a3"
                                        android:paddingLeft="10dp"
                                        android:layout_marginLeft="12dp"
                                        android:text="In a solar roof top sysytem,the solar panels are installed in   the roof of any ...."
                                        android:textColor="#878786"
                                        android:layout_marginBottom="20dp"
                                        android:layout_height="wrap_content" />



                                </LinearLayout>


                            </LinearLayout>








                        </ScrollView>

                    </LinearLayout>


                </LinearLayout>



            </ScrollView>

        </LinearLayout>




        <android.support.design.widget.NavigationView
            android:layout_width="wrap_content"
            app:menu="@menu/navigation"
            android:fitsSystemWindows="true"
            android:id="@+id/nav_drawer"
            android:background="#79B819"
            app:itemIconTint="#fff"
            app:itemTextColor="#ffffff"
            app:theme="@style/NavigationDrawerStyle"
            android:layout_gravity="start"
            android:layout_height="match_parent">


        </android.support.design.widget.NavigationView>

    </android.support.v4.widget.DrawerLayout>




</LinearLayout>
