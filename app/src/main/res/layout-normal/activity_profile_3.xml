<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_profile_3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.logischtech.pv_rooftop.profile_3"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@drawable/top_banner_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:text="Please clarify your profile to "
            android:gravity="center"
            android:textSize="18dp"
            android:id="@+id/l1"
            android:layout_marginTop="60dp"
            android:textStyle="bold"
            android:textColor="#3E4040"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:text="help us personalize information  "
            android:gravity="center_horizontal"
            android:id="@+id/l2"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#3E4040"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:text=" for you  "
            android:gravity="center_horizontal"
            android:textSize="18dp"
            android:id="@+id/l3"
            android:textStyle="bold"
            android:textColor="#3E4040"
            android:layout_height="wrap_content" />





    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/profile_gradiant_bg"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:background="#0072A7"
                android:textColor="#fff"
                android:textSize="16dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:paddingLeft="20dp"
                android:text="Where do you live?"
                android:layout_height="55dp"
                android:id="@+id/p3q1" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="13dp"
                android:layout_height="70dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.25"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_weight="0.25"
                            android:background="#fff"
                            android:id="@+id/tag_ind"
                            app:cardElevation="0dp"
                            android:clickable="true"
                            android:layout_height="50dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:text="India"
                                android:gravity="center"
                                android:textSize="14dp"
                                android:textColor="#0072A7"
                                android:id="@+id/tv1"

                                android:layout_height="50dp" />

                        </android.support.v7.widget.CardView>
                        <ImageView
                            android:layout_width="match_parent"
                            android:src="@drawable/triangle_orange"
                            android:layout_marginTop="-12dp"
                            android:id="@+id/arrow_ind"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.25"
                        android:layout_marginLeft="4dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_weight="0.25"
                            android:background="#fff"
                            app:cardElevation="0dp"

                            android:id="@+id/tag_arg"
                            android:layout_height="50dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:text="Argentina"
                                android:gravity="center"
                                android:textSize="14dp"
                                android:id="@+id/tv2"
                                android:textColor="#0072A7"

                                android:layout_height="50dp" />

                        </android.support.v7.widget.CardView>
                        <ImageView
                            android:layout_width="match_parent"
                            android:src="@drawable/triangle_orange"
                            android:layout_marginTop="-12dp"
                            android:id="@+id/arrow_arg"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.25"
                        android:orientation="vertical"
                        android:layout_marginLeft="4dp"
                        android:layout_height="wrap_content">
                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_weight="0.25"
                            app:cardElevation="0dp"

                            android:background="#fff"
                            android:id="@+id/tag_aus"
                            android:layout_height="50dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:text="Australia"
                                android:gravity="center"
                                android:textSize="14dp"
                                android:id="@+id/tv3"

                                android:textColor="#0072A7"

                                android:layout_height="50dp" />

                        </android.support.v7.widget.CardView>
                        <ImageView
                            android:layout_width="match_parent"
                            android:src="@drawable/triangle_orange"
                            android:layout_marginTop="-12dp"
                            android:id="@+id/arrow_aus"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.25"
                        android:layout_marginLeft="4dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_weight="0.25"
                            android:background="#fff"
                            app:cardElevation="0dp"
                            android:id="@+id/tag_nz"
                            android:layout_height="50dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:text="China"
                                android:gravity="center"
                                android:textSize="14dp"
                                android:id="@+id/tv4"
                                android:textColor="#0072A7"
                                android:layout_height="50dp" />

                        </android.support.v7.widget.CardView>
                        <ImageView
                            android:layout_width="match_parent"
                            android:src="@drawable/triangle_orange"
                            android:layout_marginTop="-12dp"
                            android:id="@+id/arrow_nz"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="#fff"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="13dp"
                    android:layout_height="47dp"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:paddingLeft="45dp"
                            android:text=""
                            android:layout_marginRight="20dp"
                            android:gravity="center_vertical"
                            android:id="@+id/city1"
                            android:textSize="14dp"
                            android:textColor="#0072A7"
                            android:layout_height="47dp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginLeft="-4dp"
                        android:layout_height="wrap_content">
                        <View
                            android:layout_width="5dp"
                            android:background="#EB881D"
                            android:layout_height="100dp"/>

                    </LinearLayout>





                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="#fff"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="13dp"
                    android:layout_height="47dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:paddingLeft="45dp"
                            android:text=" "
                            android:layout_marginRight="20dp"
                            android:gravity="center_vertical"
                            android:id="@+id/city2"
                            android:textSize="14dp"
                            android:textColor="#0072A7"
                            android:layout_height="47dp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginLeft="-4dp"
                        android:layout_height="wrap_content">
                        <View
                            android:layout_width="5dp"
                            android:background="#EB881D"
                            android:layout_height="100dp"/>

                    </LinearLayout>




                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="#fff"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="13dp"
                    android:layout_height="47dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:paddingLeft="45dp"
                            android:text=" "
                            android:id="@+id/city3"
                            android:layout_marginRight="20dp"
                            android:textSize="14dp"
                            android:gravity="center_vertical"
                            android:textColor="#0072A7"
                            android:layout_height="47dp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginLeft="-4dp"
                        android:layout_height="wrap_content">
                        <View
                            android:layout_width="5dp"
                            android:background="#EB881D"
                            android:layout_height="100dp"/>

                    </LinearLayout>





                </LinearLayout>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:id="@+id/questions"
                    android:gravity="left"
                    android:layout_marginTop="-150dp"
                    android:layout_gravity="left"
                    android:theme="@style/MyRadioButtonStyle"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:scaleY="0.8"
                        android:scaleX="0.8"

                        android:gravity="left"
                        android:layout_marginLeft="-5dp"
                        android:layout_marginRight="30dp"

                        android:layout_marginTop="5dp"
                        android:layout_gravity="left"
                        android:id="@+id/radio2"
                        />
                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:gravity="left"
                        android:scaleY="0.8"
                        android:layout_marginRight="30dp"
                        android:scaleX="0.8"
                        android:layout_marginLeft="-5dp"
                        android:layout_marginTop="21dp"
                        android:layout_gravity="left"
                        android:id="@+id/radio3"

                        />
                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:scaleY="0.8"
                        android:scaleX="0.8"
                        android:layout_marginRight="30dp"

                        android:gravity="left"
                        android:layout_marginLeft="-5dp"
                        android:layout_marginTop="21dp"
                        android:layout_gravity="left"
                        android:id="@+id/radio4"

                        />





                </RadioGroup>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:layout_width="80dp"
            android:textSize="16dp"
            android:layout_gravity="end"
            android:id="@+id/next3"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="0dp"
            android:textColor="#fff"
            android:layout_marginRight="13dp"
            android:layout_marginBottom="10dp"
            android:background="#0072A7"
            android:text="Next"
            android:layout_height="wrap_content" />



    </LinearLayout>

</LinearLayout>
